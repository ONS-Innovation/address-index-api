# Routes
# Definition of all applications routes
# Routes are called in priority order

# ONS-Address Index home page
GET     /                                       uk.gov.ons.addressIndex.demoui.controllers.ApplicationHome.indexPage

# ONS-Address Index Single Search View
GET     /addresses                              uk.gov.ons.addressIndex.demoui.controllers.SingleMatch.showSingleMatchPage

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)

# ONS-Address Index Single Search Request
POST    /addresses/search                       uk.gov.ons.addressIndex.demoui.controllers.SingleMatch.doMatch

# ONS-Address Index Single Search Request
GET    /addresses/search                        uk.gov.ons.addressIndex.demoui.controllers.SingleMatch.showSingleMatchPage

# ONS-Address Index Single Search Request
GET    /addresses/search/:input                 uk.gov.ons.addressIndex.demoui.controllers.SingleMatch.doMatchQS(input : String)